<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.Thera.Views.PhysiciansPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Physicians">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Clicked="OnAddClicked"/>
    </ContentPage.ToolbarItems>

    <CollectionView
        x:Name="PhysiciansList"
        Margin="12"
        SelectionMode="Single"
        SelectionChanged="OnPhysicianSelected">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Name & specialization on the left -->
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Text="{Binding Name}"
                           FontAttributes="Bold"/>

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           FontSize="12"
                           Text="{Binding Specialization}"/>

                    <!-- Delete button on the right -->
                    <Button Grid.RowSpan="2"
                            Grid.Column="1"
                            Text="Delete"
                            BackgroundColor="Red"
                            TextColor="White"
                            Padding="10,4"
                            Clicked="OnDeletePhysician"
                            CommandParameter="{Binding .}"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
