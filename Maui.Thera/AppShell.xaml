<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.Thera.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.Thera.Views">

    <FlyoutItem Title="Patients"
                Route="patients">
        <ShellContent
            Title="Patients"
            ContentTemplate="{DataTemplate views:PatientsPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Physicians"
                Route="physicians">
        <ShellContent
            Title="Physicians"
            ContentTemplate="{DataTemplate views:PhysiciansPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Appointments"
                Route="appointments">
        <ShellContent
            Title="Appointments"
            ContentTemplate="{DataTemplate views:AppointmentsPage}"/>
    </FlyoutItem>


</Shell>
